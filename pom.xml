<!-- pom.xml -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- ===== Project coordinates ===== -->
  <groupId>com.example</groupId>
  <artifactId>my-app</artifactId>
  <version>1.0.${revision}</version>
  <packaging>jar</packaging>

  <!-- ===== Global properties ===== -->
  <properties>
    <maven.compiler.release>21</maven.compiler.release>   <!-- Java 21 -->
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <revision>SNAPSHOT</revision>                         <!-- overridden by CI if desired -->
  </properties>

  <!-- ===== Dependencies ===== -->
  <dependencies>
    <!-- Example runtime stack -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
      <version>3.2.5</version>
    </dependency>

    <!-- JUnit 5 for tests -->
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.10.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <!-- ===== Build plugins ===== -->
  <build>
    <plugins>
      <!-- Compiler -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
      </plugin>

      <!-- JaCoCo for coverage (required by Sonar) -->
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
        <version>0.8.11</version>
        <executions>
          <execution>            <!-- adds agent -->
            <goals><goal>prepare-agent</goal></goals>
          </execution>
          <execution>            <!-- generates report -->
            <id>report</id>
            <phase>test</phase>
            <goals><goal>report</goal></goals>
          </execution>
        </executions>
      </plugin>

      <!-- Spring Boot re-package (optional) -->
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <version>3.2.5</version>
      </plugin>
    </plugins>
  </build>

  <!-- ===== Where Maven deploys artefacts ===== -->
  <distributionManagement>
    <snapshotRepository>
      <id>nexus-snapshots</id>
      <url>http://10.25.157.175:32003/repository/maven-snapshots/</url>
    </snapshotRepository>
    <repository>
      <id>nexus-releases</id>
      <url>http://10.25.157.175:32003/repository/maven-releases/</url>
    </repository>
  </distributionManagement>
</project>
